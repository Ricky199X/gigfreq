<h1>Please enter your login information below!</h1>
<%= form_tag ({controller: 'sessions', action: 'create', method: 'get'}) do %>
  
  <div class="form">
  Email: <%= text_field_tag :email%> <br/><br/>
  Password: <%= password_field_tag %>
  </div>
  
  <div class = "actions">
  <%= submit_tag "Log In"%><br/>
  </div>

  <button><%= link_to "Login With Facebook", "/auth/facebook", method: :post%></button>

<% end %>
 