
<div class="container">
  <h4>Please enter your login information below!</h4>

  <%= form_tag ({controller: 'sessions', action: 'create', method: 'get'}) do %>
    
    <div class="form">
      Email: <%= text_field_tag :email%> <br/><br/>
      Password: <%= password_field_tag %>
    </div>

    <section class="center">
      <button class="btn waves-effect waves-light" type="submit">
        <i class="material-icons right">forward</i>
        <%= submit_tag "Log In", style: "color: white" %>
      </button>

      <button class="btn waves-effect waves-light">
        <%= link_to "Login With Facebook", "/auth/facebook", method: :post, style: "color: white" %>
      </button>
    </section>
    
  <% end %>
</div>
 