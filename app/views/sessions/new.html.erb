

<h4>Please enter your login information below!</h4>

<%= form_tag ({controller: 'sessions', action: 'create', method: 'get'}) do %>
  
  <div class="form">
    Email: <%= text_field_tag :email%> <br/><br/>
    Password: <%= password_field_tag %>
  </div>
  
  <section class="medium-buttons"> 

    <button class="btn waves-effect waves-light red" type="submit">
      <i class="material-icons right">forward</i>
      <%= submit_tag "Log In" %>
    </button>

  
    <button class="btn waves-effect waves-light red">
      <%= link_to "Login With Facebook", "/auth/facebook", method: :post%>
    </button>
  
  </section>
  

<% end %>
 