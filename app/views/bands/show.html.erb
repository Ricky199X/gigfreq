<%= flash[:alert] if flash[:alert] %>

<h1>Welcome, <%=@account.username%>!</h1>

<h2>See your upcoming shows below:</h2>
<table class="table">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

   <tbody>
   <tr>
      <td><strong>Artist</strong></td>
      <td><strong>Venue</strong></td>
      <td><strong>Location</strong></td>
      <td><strong>Date</strong></td>
   </tr>
   
   <% @band.shows.each do |show| %>
      <tr>
         <td><%= show.name%></td>
         <td><%= show.venue%></td>
         <td><%= "#{show.city}, #{show.state}"%></td>
         <td><%= link_to "View Gig" , show_path(show)%></td>
      </tr>
   <%end%>
   </tbody>
</table>

<%= link_to "Back", shows_path %>


