<h2>Welcome to GigFreq! Please sign up your band here!</h2>

<%= form_for @band do |f| %>

  <div class= "field">
    <%= f.label :name %><br/>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

   <div class= "field">
    <%= f.label :website %><br/>
    <%= f.text_field :website %>
  </div>

  <div class= "field">
    <%= f.label :genre %><br/>
    <%= f.text_field :genre%>
  </div>

  <div class= "field">
    <%= f.label :description %><br/>
    <%= f.text_area :description%>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %><br/>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>

<% end %>