<h2>Welcome to GigFreq! Please complete your band signup here!</h2>

<%= form_for @band do |f| %>

  <div class= "field">
    <%= f.label :website %><br/>
    <%= f.text_field :website %>
  </div>

  <div class= "field">
    <%= f.label :genre %><br/>
    <%= f.text_field :genre%>
  </div>

  <div class= "field">
    <%= f.label :description %><br/>
    <%= f.text_area :description%>
  </div>

  <div class="actions">
    <%= f.submit "Finish Sign up" %>
  </div>

<% end %>

<% if @band.errors.any? %>
  <%@band.errors.full_messages.each do |msg| %>
    <p><%= msg %></p>
  <%end%>
<%end%>