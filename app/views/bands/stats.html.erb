<header>
    <%= render 'layouts/bandnav'%>
</header>

<h1><%=current_user.username%>'s Stats</h1>

<div class="stats info">
   <p><strong>Your Total Shows:</strong> <%=current_user.accountable.total_shows%></p>
   <p><strong>Your Total Fans:</strong> <%=current_user.accountable.total_fans%></p>
   <p><strong>Your Total Locations:</strong> <%= current_user.accountable.locations%></p>
</div>


<div class = "fans"> 
    <p><strong>Your Fans:</strong></p>
    <% current_user.accountable.fans.each do |fan| %>
        <p><%=fan%></p>
    <%end%>
</div>