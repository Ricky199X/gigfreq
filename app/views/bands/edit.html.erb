
<%= form_for @band do |f| %>

  <div class= "field">
    <%= f.label :website %><br/>
    <%= f.text_field :website %>
  </div>

  <div class= "field">
    <%= f.label :genre %><br/>
    <%= f.text_field :genre%>
  </div>

  <div class= "field">
    <%= f.label :description %><br/>
    <%= f.text_area :description%>
  </div>

  <div class="actions">
    <%= f.submit "Update Your Profile!" %>
  </div>

<% end %>