
<h1><%=@show.name%></h1>

<div class="show info">
   <p><strong>Artist Name:</strong> <%=@show.band.name%></p>
   <p><strong>Name:</strong> <%=@show.name%></p>
   <p><strong>Venue:</strong> <%=@show.venue%></p>
   <p><strong>City:</strong> <%=@show.city%></p>
   <p><strong>State:</strong> <%=@show.state%></p>
   <p><strong>Date:</strong> <%=@show.date%></p>

</div>

<div class = "actions">
<% if current_user.accountable_type == "Band" %>
   <button><%= link_to "Edit Show", edit_band_show_path(current_user) %></button>
<%else%>
   <%= form_tag '/attend' do %>
      <%= hidden_field_tag 'show_id', @show.id %>
      <p><strong>Select your desired number of tickets: <%= number_field_tag 'tickets_bought',  :in => 1..8 %></strong></p>
      <%= submit_tag "Attend This Show!" %>
   <%end%>
<%end%>
</div>