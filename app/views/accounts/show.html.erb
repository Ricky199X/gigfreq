<h1>Your Account Info:</h1>

<div class="w3-container">
<% if current_user.accountable_type == "Band" %>
    <p>Name: <%=current_user.username %><p>
    <p>Website: <%=current_user.accountable.website %></p>
    <p>Email Address: <%= current_user.email %></p>
    <p>Genre: <%= current_user.accountable.genre %></p>
    <p>Description:<%= current_user.accountable.description%></p>
<% else %>
    <p>Name: <%=current_user.username %><p>
    <p>Email Address: <%= current_user.email %></p>
    <p>City: <%= current_user.accountable.city %></p>
    <p>State: <%= current_user.accountable.state%></p>
    <p>Favorite Band: <%= current_user.accountable.favorite_band%></p>
<%end%>
</div>

<% if current_user.accountable_type == "Band"%>
    <button><%= link_to "Update Band Info", edit_band_path(current_user)%>
    <button><%= link_to "Back", band_path(current_user)%>
<%else%>
    <button><%= link_to "Update Account", edit_user_path(current_user)%></button>
    <button><%= link_to "Back", user_path(current_user)%>
<%end%>

